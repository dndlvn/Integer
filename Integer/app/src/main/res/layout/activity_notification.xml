<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ProfileActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/logo_integer" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imageView"
                android:layout_toStartOf="@id/imageView2"
                android:layout_marginStart="16dp"
                android:text="Тестов Т.Т."
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roleUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_alignStart="@id/userName"
                android:text="Разработчик"
                android:textColor="#818181"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/icon_integer" />
        </RelativeLayout>

        <View
            android:id="@+id/grayBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/topDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/topDivider"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/mainText"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/corner_radius_bg"
            app:layout_constraintTop_toBottomOf="@id/topDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/mainTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уведомления"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@id/mainText"
            app:layout_constraintBottom_toBottomOf="@id/mainText"
            app:layout_constraintStart_toStartOf="@id/mainText"
            app:layout_constraintEnd_toEndOf="@id/mainText" />

        <View
            android:id="@+id/notif1Txt"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_height="80dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainText" />

        <View
            android:id="@+id/notif2Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif1Txt" />



        <View
            android:id="@+id/notif3Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif2Txt" />

        <View
            android:id="@+id/notif4Txt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif3Txt" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поступил задача на проверку"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/notif1Txt"
            app:layout_constraintStart_toStartOf="@+id/notif1Txt"
            app:layout_constraintTop_toTopOf="@+id/notif1Txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задача №1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/notif1Txt"
            app:layout_constraintEnd_toEndOf="@+id/notif1Txt"
            app:layout_constraintStart_toStartOf="@+id/notif1Txt"
            app:layout_constraintTop_toTopOf="@+id/notif1Txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задача №2"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/notif2Txt"
            app:layout_constraintEnd_toEndOf="@+id/notif2Txt"
            app:layout_constraintStart_toStartOf="@+id/notif2Txt"
            app:layout_constraintTop_toTopOf="@+id/notif2Txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задача №3"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/notif3Txt"
            app:layout_constraintEnd_toEndOf="@+id/notif3Txt"
            app:layout_constraintStart_toStartOf="@+id/notif3Txt"
            app:layout_constraintTop_toTopOf="@+id/notif3Txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задача №4"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/notif4Txt"
            app:layout_constraintEnd_toEndOf="@+id/notif4Txt"
            app:layout_constraintStart_toStartOf="@+id/notif4Txt"
            app:layout_constraintTop_toTopOf="@+id/notif4Txt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поступил задача на проверку"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/notif2Txt"
            app:layout_constraintStart_toStartOf="@+id/notif2Txt"
            app:layout_constraintTop_toTopOf="@+id/notif2Txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поступил задача на проверку"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/notif3Txt"
            app:layout_constraintStart_toStartOf="@+id/notif3Txt"
            app:layout_constraintTop_toTopOf="@+id/notif3Txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поступил задача на проверку"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/notif4Txt"
            app:layout_constraintStart_toStartOf="@+id/notif4Txt"
            app:layout_constraintTop_toTopOf="@+id/notif4Txt"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="50dp"
            android:text="Назад"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notif4Txt"
            app:strokeColor="#19B6FF"
            app:strokeWidth="2dp" />

        <View
            android:id="@+id/viewCheck"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:background="#19B6FF"
            app:layout_constraintBottom_toBottomOf="@+id/notif1Txt"
            app:layout_constraintStart_toStartOf="@+id/notif1Txt"
            app:layout_constraintTop_toTopOf="@+id/notif1Txt" />

        <View
            android:id="@+id/viewCheck1"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:background="#19B6FF"
            app:layout_constraintBottom_toBottomOf="@+id/notif3Txt"
            app:layout_constraintStart_toStartOf="@+id/notif3Txt"
            app:layout_constraintTop_toTopOf="@+id/notif3Txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
